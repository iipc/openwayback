		<artifactId>oss-parent</artifactId>
		<version>7</version>
	</parent>

	<groupId>org.netpreserve.openwayback</groupId>
	<artifactId>openwayback</artifactId>
	<packaging>pom</packaging>
	<version>2.0.0.BETA.3-SNAPSHOT</version>
	<name>OpenWayback</name>

