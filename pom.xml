			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<organization>
		<name>IIPC</name>
		<url>http://netpreserve.org/</url>
	</organization>

	<issueManagement>
		<url>https://github.com/iipc/openwayback/issues</url>
		<system>GitHub</system>
	</issueManagement>

	<ciManagement>
